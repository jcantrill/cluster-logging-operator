#/bin/bash

declare -A images=( /
 ["vector"]=${IMAGE_LOGGING_VECTOR} /
 ["fluentd"]=${IMAGE_LOGGING_FLUENTD} /
 ["log-file-metric-exporter"]=${IMAGE_LOG_FILE_METRIC_EXPORTER} /
 ["logging-view-plugin"]=${IMAGE_LOGGING_CONSOLE_PLUGIN} /
 )

for i in "${!images[@]}" ; do
  image="quay.io/openshift-logging/${$i}:ci"
  sed -i "s/$image/${images[$i]}/g" ../../../bundle/manifests/clusterlogging.clusterserviceversion.yaml
done